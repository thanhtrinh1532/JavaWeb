	//hiển thị danh sách sinh viên điểm cao nhất
	public double maxdiem() {
		
		double max=first.getDiem();
		DoubleLink p = first.next;
		while(p != null) {
			if(max<p.getDiem()) max=p.getDiem();
			p=p.next;
		}
		return max;
	}
	public void printmax() {
