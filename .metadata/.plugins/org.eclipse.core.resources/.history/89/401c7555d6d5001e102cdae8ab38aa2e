package DSLKKEP;

import java.util.Scanner;


import DSLKKEP.DoubleLink;
import DSLKKEP.LinkDAO;

public class LinkList {
	public DoubleLink first,last;
	DoubleLink q=null;DoubleLink p=null;
	LinkDAO obj=new LinkDAO();
	
	public LinkList() {
		first=null;last=null;
	}
	public void insert(String maBN, String hoTen, String ngaySinh, String diaChi, String soDT, String gioiTinh,
			String ngheNghiep, String ngayKham) {
		DoubleLink nut=new DoubleLink(maBN,hoTen,ngaySinh,diaChi,soDT,gioiTinh,ngheNghiep,ngayKham);
		if((last==null)&&(first==null)) {last=nut;first=nut;}
		else {
			last.next=nut;
			nut.prev=last;
			last=nut;
		}
	}
	public void ghifile() {
		insert("BN001", "Nguyễn Văn A", "01/01/1980", "Thành phố HCM", "0123456789", "Nam", "Bác sĩ", "25/02/2024");
		insert("BN002", "Trần Thị B", "15/05/1990", "Thành phố Hà Nội", "0987654321", "Nữ", "Y tá", "26/02/2024");
		insert("BN003", "Lê Văn C", "10/10/1975", "Thành phố Đà Nẵng", "0345678901", "Nam", "Kỹ sư", "27/02/2024");
		insert("BN004", "Phạm Thị D", "20/03/1985", "Thành phố Cần Thơ", "0765432109", "Nữ", "Giáo viên", "28/02/2024");
		insert("BN005", "Hoàng Văn E", "05/06/1995", "Thành phố Hải Phòng", "0890123456", "Nam", "Nhà bếp", "01/03/2024");
		insert("BN006", "Nguyễn Thị F", "30/09/1988", "Thành phố Vũng Tàu", "0654321098", "Nữ", "Công nhân", "02/03/2024");

		obj.ghiFile(first,last);
	}
	public void docfile() {
		first=obj.docFile("d:\\dslkkep.bin");
	}
	public void creatList() {
		Scanner scanner=new Scanner(System.in);
		while(true) {
			String maBN="";
			System.out.print("\n Nhap ma bệnh nhân: ");
			 maBN =scanner.nextLine();
			if(maBN.length()==0) {break;}
			else {
				System.out.print("Nhập họ tên: ");
				String hoTen =scanner.nextLine();
				System.out.print("Nhập ngày sinh: ");
				String ngaySinh =scanner.nextLine();
				System.out.print("Nhập địa chỉ: ");
				String diaChi =scanner.nextLine();
				System.out.print("Nhập số điện thoại: ");
				String soDT =scanner.nextLine();
				System.out.print("Nhập giới tính: ");
				String gioiTinh =scanner.nextLine();
				System.out.print("Nhập nghề nghiệp: ");
				String ngheNghiep =scanner.nextLine();
				System.out.print("Nhập ngày khám: ");
				String ngayKham =scanner.nextLine();
				scanner.nextLine();
				insert(maBN,hoTen,ngaySinh,diaChi,soDT,gioiTinh,ngheNghiep,ngayKham);
			}
		}
		obj.ghiFile(first,last);
	}
	//hiển thị danh sách
	public void printList() {
		DoubleLink p = first;
		DoubleLink q = last;
		System.out.println("+---------------------------------------------------------------------+");
		System.out.printf("|  %-6s |  %-12s |   %-7s | %-9s | %-9s | %-9s | %-9s | %-9s |\n","Mã bn","Họ tên","Ngày sinh","Địa chỉ","Số điện thoại","Giới tính","Nghề nghiệp","Ngày Khám");
		System.out.println("+---------------------------------------------------------------------+");
		while(p != null) {
			System.out.printf("|  %-6s |  %-12s |   %-7s |   %-7s |   %-7s |   %-7s |   %-7s |   %-7s |\n",p.getMaBN(),p.getHoTen(),p.getNgaySinh(),p.getDiaChi(),p.getSoDT(),p.getGioiTinh(),p.getNgheNghiep(),p.getNgayKham());
			p = p.next;
			System.out.println("+---------------------------------------------------------------------+");
		}
		System.out.println("");
		obj.ghiFile(p,last);
	}
