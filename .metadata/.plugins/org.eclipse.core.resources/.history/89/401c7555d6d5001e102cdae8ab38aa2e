	//kiểm tra kết quả
	public DoubleLink kq() {
		DoubleLink p = first;
		while(p != null) {
			if(p.getDiem()>=5) p.setKq("Đậu");
			else p.setKq("Rớt");
			p = p.next;
		}
		obj.ghiFile(p);
		return p;
	}
	
	//xếp loại sinh viên
	public DoubleLink xl() {
		DoubleLink p = first;
		while(p != null) {
			if(p.getDiem()<5) p.setXl("Kém");
