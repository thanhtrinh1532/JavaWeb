package DSLKDOI;
import java.util.Scanner;

import linklistdon.Link;


public class DoubleLinkList {
	public DoubleLink first,last;
	DoubleLink q=null;DoubleLink p=null;
	DoubleLinkDAO obj=new DoubleLinkDAO();
	
	public DoubleLinkList() {
		first=null;last=null;
	}
	public void insert(String maSV, String hoTen,double diem) {
		DoubleLink nut=new DoubleLink(maSV,hoTen,diem);
		if((last==null)&&(first==null)) {last=nut;first=nut;}
		else {
			last.next=nut;
			nut.prev=last;
			last=nut;
		}
	}
	public void creatList() {
		//boolean ok;
		Scanner scanner=new Scanner(System.in);
		while(true) {
			String maSV="";
			System.out.print("\n Nhap ma sinh vien: ");
			 maSV =scanner.nextLine();
			if(maSV.length()==0) {break;}
			else {
				System.out.print("Nhap ho ten: ");
				String hoten =scanner.nextLine();
				System.out.print("nhap diem");
				float diem=scanner.nextFloat();
				scanner.nextLine();
				insert(maSV, hoten, diem);
			}
		}
	}
	public void printList() {
		DoubleLink p = first;
		while(p != null) {
			System.out.println(p.getMaSV()+" "+p.getHoten()+" "+p.getDiem());
			p = p.next;
		}
		System.out.println("");
	}
	public void printList1() {
		DoubleLink p = last;
		while(p != null) {
			System.out.println(p.getMaSV()+" "+p.getHoten()+" "+p.getDiem());
			p = p.prev;
		}
		System.out.println("");
	}
	public DoubleLink kq() {
		DoubleLink p = first;
		while(p != null) {
			if(p.getDiem()>=5) p.setKq("Đậu");
			else p.setKq("Rớt");
			p = p.next;
		}
	//	obj.ghiFile(p);
		return p;
	}
	
	public DoubleLink xl() {
		DoubleLink p = first;
		while(p != null) {
			if(p.getDiem()<5) p.setXl("Kém");
			else if(p.getDiem()<7) p.setXl("Trung bình");
				else if(p.getDiem()<8) p.setXl("Khá");
				else p.setXl("Giỏi");

			p = p.next;
		}
	//	obj.ghiFile(p);
		return p;
		
	}
	
	public void thongke() {
		System.out.println("THỐNG KÊ DANH SÁCH SINH VIÊN");
		DoubleLink p = first; int demgioi=0,demkha=0,demTB=0,demkem=0;
		while(p!=null) {
			
			if(p.getXl().equals("Giỏi")) demgioi++;
			else if(p.getXl().equals("Khá")) demkha++;
				else if(p.getXl().equals("Trung bình")) demTB++;
					else demkem++;
			p=p.next;
					}
			System.out.println("So luong GIỎI: " + demgioi);
			System.out.println("So luong KHÁ: " + demkha);
			System.out.println("So luong TRUNG BÌNH:" + demTB);
			System.out.println("So luong KÉM:" + demkem);
		
			
		
	}
	
	public double maxdiem() {
		double max=first.getDiem();
		DoubleLink p = first.next;
		while(p != null) {
			if(max<p.getDiem()) max=p.getDiem();
			p=p.next;
		}
		return max;
	}
}
