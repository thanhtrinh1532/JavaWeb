package dequy;

public class TongLT {
	public static int lt(int n)
	{
		if(n==0) return 1;
		else return n*lt(n-1);
	}
	public static void tonglt(int n) {
		if(n==1) return 1;
		else {
			for (int i=1;i<=n;i++) 
			return lt(i)+lt(i-1);
		}
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.print("Luy thua cua 2^n la:"+tonglt(2));
	}

}
