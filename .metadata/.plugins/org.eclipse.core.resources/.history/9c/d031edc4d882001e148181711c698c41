			System.out.println("**----------------------------------------------**");
			System.out.println("**  6. Sửa thông tin món                        **");
			System.out.println("**************************************************");
			System.out.print("\u001B[0m");
			System.out.println("Lua chon chuc nang ==> ");
			c1=sc.nextInt();
			
		switch(c1) {
			case 1:{
				td.khoiTao();
				
				break;
			}
			case 2:{
				td.docFile();
				td.hienThiThucDon();
				break;
			}
			case 3:{
				sc.nextLine();
				System.out.println("Nhap loai thuc uong can tim: ");
				String loai=sc.nextLine();
				td.hienThiMonTheoLoai(loai);
				break;
			}
			case 4:{
				td.docFile();
				System.out.println("Nhap vi tri can them mon: ");
				int vt=sc.nextInt();
				sc.nextLine();
				System.out.print("Nhap id thuc uong can them: ");
				String id=sc.nextLine();
				System.out.print("Nhap ten thuc uong: ");
				String tenMon=sc.nextLine();
				System.out.print("Nhap id loai: ");
				String id_Loai=sc.nextLine();
				System.out.print("Nhap don gia: ");
				int donGia=sc.nextInt();
				sc.nextLine();
				System.out.print("Nhap don vi tinh: ");
				String donViTinh="VND";
				ThucDon themMon=new ThucDon(id,tenMon,id_Loai,donGia,donViTinh);
				td.chen(vt,themMon);
				break;
			}
			case 5:{
				/*System.out.println("Nhap vi tri can chen: ");
				int vt=sc.nextInt();
				sc.nextLine();
				System.out.println("Nhap ma SV: ");
				String maSv=sc.nextLine();
				maSv=sv.check(maSv);
				sc.nextLine();
				System.out.println("Nhap hoc ten: ");
				String hoTen=sc.nextLine();
				System.out.println("Nhap tuoi: ");
				int tuoi=sc.nextInt();
				sv.check(tuoi);
				System.out.println("Nhap diem trung binh: ");
				float diemTb=sc.nextFloat();
				SinhVien obj=new SinhVien(hoTen, tuoi, maSv, diemTb);
				sv.chen(vt, obj);*/
				break;
			}
			case 6:{
				/*System.out.print("nhap ma SV can xoa: \n");
				sc.nextLine();
				String maSV=sc.nextLine();
				sv.xoa(maSV);
				sv.hienthi();*/
				break;
			}
			case 7:{
				//sv.hienthiMax();
				break;
			}
			case 8:{
				/*System.out.print("nhap ma SV can sua: \n");
				sc.nextLine();
				String maSua=sc.nextLine();
				sc.nextLine();
				System.out.println("Nhap hoc ten: ");
				String hoTen=sc.nextLine();
				System.out.println("Nhap tuoi: ");
				int tuoi=sc.nextInt();
				
				System.out.println("Nhap diem trung binh: ");
				float diemTb=sc.nextFloat();
				SinhVien sinhviensua=new SinhVien(hoTen, tuoi, maSua, diemTb);
				sv.sua(maSua, sinhviensua);*/
				break;
			}
		}
		}while(c1<=6);
	}
	
